<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="OrangeHRM Automation Suite">

    <!-- ✅ Extent Report Listener -->
    <listeners>
        <listener class-name="com.orangehrm.utilities.TestListener"/>
    </listeners>

    <!-- ✅ Full Regression Suite -->
    <test name="OrangeHRM Regression Tests">

        <classes>

            <!-- ✅ LOGIN MODULE -->
            <class name="com.orangehrm.testcases.LoginTest"/>
            <class name="com.orangehrm.testcases.InvalidLoginTest"/>
            <class name="com.orangehrm.testcases.EmptyLoginTest"/>
            <class name="com.orangehrm.testcases.ForgotPasswordTest"/>

            <!-- ✅ EMPLOYEE MANAGEMENT MODULE -->
            <class name="com.orangehrm.testcases.AddEmployeeTest"/>
            <class name="com.orangehrm.testcases.SearchEmployeeTest"/>
            <class name="com.orangehrm.testcases.DeleteEmployeeTest"/>

            <!-- ✅ LOGOUT MODULE -->
            <class name="com.orangehrm.testcases.LogoutTest"/>

        </classes>

    </test>

</suite>
